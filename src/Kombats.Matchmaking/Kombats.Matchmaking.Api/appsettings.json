{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=combats_matchmaking;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Matchmaking": {
    "Redis": {
      "DatabaseIndex": 1,
      "StatusTtlSeconds": 1800
    },
    "Worker": {
      "TickDelayMs": 100
    },
    "TimeoutWorker": {
      "ScanIntervalMs": 5000,
      "TimeoutSeconds": 60
    },
    "OutboxDispatcher": {
      "DispatchIntervalMs": 5000,
      "BatchSize": 50,
      "MaxRetryCount": 3,
      "RetryBaseDelayMs": 1000
    }
  },
  "Messaging": {
    "RabbitMq": {
      "Host": "localhost",
      "VirtualHost": "/",
      "Username": "guest",
      "Password": "guest",
      "UseTls": false,
      "HeartbeatSeconds": 30
    },
    "Transport": {
      "PrefetchCount": 32,
      "ConcurrentMessageLimit": 8
    },
    "Topology": {
      "EndpointPrefix": "matchmaking",
      "EntityNamePrefix": "combats",
      "UseKebabCase": true,
      "EntityNameMappings": {
        "CreateBattle": "queue:battle.create-battle",
        "BattleCreated": "battle.battle-created"
      }
    },
    "Retry": {
      "Mode": "Exponential",
      "ExponentialCount": 5,
      "ExponentialMinMs": 200,
      "ExponentialMaxMs": 5000,
      "ExponentialDeltaMs": 200
    },
    "Redelivery": {
      "Enabled": true,
      "IntervalsSeconds": [30, 120, 600]
    },
    "Outbox": {
      "Enabled": true,
      "QueryDelaySeconds": 1,
      "DeliveryLimit": 500
    },
    "Inbox": {
      "Enabled": true,
      "RetentionDays": 7,
      "CleanupIntervalMinutes": 15
    },
    "Scheduler": {
      "Enabled": true
    }
  }
}
