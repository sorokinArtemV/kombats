{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MassTransit": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=combats_battle;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Messaging": {
    "RabbitMq": {
      "Host": "localhost",
      "VirtualHost": "/",
      "Username": "guest",
      "Password": "guest",
      "UseTls": false,
      "HeartbeatSeconds": 30
    },
    "Transport": {
      "PrefetchCount": 32,
      "ConcurrentMessageLimit": 8
    },
    "Topology": {
      "EndpointPrefix": "battle",
      "EntityNamePrefix": "combats",
      "UseKebabCase": true,
      "EntityNameMappings": {
        "CreateBattle": "battle.create-battle",
        "BattleCreated": "battle.battle-created",
        "ResolveTurn": "battle.resolve-turn",
        "EndBattle": "battle.end-battle",
        "BattleEnded": "battle.battle-ended"
      }
    },
    "Retry": {
      "Mode": "Exponential",
      "ExponentialCount": 5,
      "ExponentialMinMs": 200,
      "ExponentialMaxMs": 5000,
      "ExponentialDeltaMs": 200
    },
    "Redelivery": {
      "Enabled": true,
      "IntervalsSeconds": [30, 120, 600]
    },
    "Outbox": {
      "Enabled": true,
      "QueryDelaySeconds": 1,
      "DeliveryLimit": 500
    },
    "Inbox": {
      "Enabled": true,
      "RetentionDays": 7,
      "CleanupIntervalMinutes": 15
    },
    "Scheduler": {
      "Enabled": true
    }
  },
  "Battle": {
    "Redis": {
      "ActionTtl": "12:00:00",
      "StateTtlAfterEnd": null
    }
  },
  "CombatBalance": {
    "Hp": {
      "BaseHp": 0,
      "HpPerEnd": 6
    },
    "Damage": {
      "BaseWeaponDamage": 5,
      "DamagePerStr": 1.0,
      "DamagePerAgi": 0,
      "DamagePerInt": 0,
      "SpreadMin": 0.85,
      "SpreadMax": 1.15
    },
    "Mf": {
      "MfPerAgi": 5,
      "MfPerInt": 5
    },
    "DodgeChance": {
      "Base": 0.05,
      "Min": 0.02,
      "Max": 0.35,
      "Scale": 1.0,
      "KBase": 50
    },
    "CritChance": {
      "Base": 0.03,
      "Min": 0.01,
      "Max": 0.30,
      "Scale": 1.0,
      "KBase": 60
    },
    "CritEffect": {
      "Mode": "BypassBlock",
      "Multiplier": 1.5,
      "HybridBlockMultiplier": 0.5
    }
  }
}



